@model IEnumerable<cecati_117.Models.Grupo>

@{
    ViewBag.Title = "Mis grupos";
}
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                
                <ul class="nav navbar-right panel_toolbox">
                    
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <br />
                <div class="panel panel-primary">
                    <!-- Default panel contents -->
                    <div class="panel-heading">
                        <h3>  <span class="fa fa-group"></span> Tus grupos de estudio</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover  dt-responsive nowrap myTable" style="width:100%; font-size:medium;">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nombre_grupo)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Turno)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Ciclo_escolar)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Horario)
                                    </th>
                                    <th>
                                        Docente
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nombre_grupo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Turno)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ciclo_escolar)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Horario)
                                        </td>
                                        <td>
                                            @item.Personas.Where(x => x.Rol.Equals("Maestro")).FirstOrDefault().Nombre  @item.Personas.Where(x => x.Rol.Equals("Maestro")).FirstOrDefault().Apellido_paterno  @item.Personas.Where(x => x.Rol.Equals("Maestro")).FirstOrDefault().Apellido_materno
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>


                </div>
                   

                


                
            </div>
        </div>
    </div>
</div>
