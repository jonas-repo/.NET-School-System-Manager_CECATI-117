@model IEnumerable<cecati_117.Models.Presentacion>

@{
    ViewBag.Title = "Index";
}
<div class="page-title">
    <div class="title_left">
        <h3>Presentación</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="x_panel">

            <div class="x_title">
                <h2>Editar Presentación</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @*<p>
                        @Html.ActionLink("Create New", "Create")
                    </p>*@
                <br />
                <a href="@Url.Action("Create", "Presentacion")" class="btn btn-success">Agregar información a presentación</a>
                <br />
                <table class="table table-hover table-bordered dt-responsive nowrap myTable" style="width:100%" >
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Presentacion_numero)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Presentacion_titulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Presentacion_descripcion)
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Presentacion_numero)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Presentacion_titulo)
                                </td>
                                <td style="max-width:200px; overflow:hidden;">
                                    @Html.Raw(item.Presentacion_descripcion)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Presentacion_ID })*@
                                    <a href="@Url.Action("Edit","Presentacion", new { id = item.Presentacion_ID })" class="btn btn-info">Editar</a>
                                    @*@Html.ActionLink("Details", "Details", new { id = item.Presentacion_ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Presentacion_ID })*@
                                    <a onclick="return confirm('¿Desea eliminar este registro?');" href="@Url.Action("DeleteConfirmed","Presentacion", new { id = item.Presentacion_ID })" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
