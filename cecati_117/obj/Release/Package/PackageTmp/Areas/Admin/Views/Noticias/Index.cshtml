@model IEnumerable<cecati_117.Models.Noticias>

@{
    ViewBag.Title = "Noticias indice";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Editar noticias <small>lista de noticias a mostrar</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <a href="@Url.Action("Create", "Noticias")" class="btn btn-success">Agregar una noticia</a>
                <br />
                <table class="table table-hover table-bordered dt-responsive nowrap myTable" style="width:100%" >
                    <thead>
                        <tr>
                            <th>
                                <label>Titulo</label>
                            </th>
                            <th>
                                <label>Imagen</label>
                            </th>
                            <th>
                                <label>Fecha</label>
                            </th>
                            <th> Opciones </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending( x=> x.Noticias_Fecha))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Noticias_Titulo)
                                </td>
                                <td>
                                    <div class="s_container seleccion_simple_default">
                                        <div class="ssm_opcion">
                                            <a href="@Html.DisplayFor(modelItem => item.Noticias_ImagenURL)" target="_blank">
                                                <img src="@Html.DisplayFor(modelItem => item.Noticias_ImagenURL)" class="img-thumbnail img-responsive"  />
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(ModelItem => item.Noticias_Fecha.Year)/@Html.DisplayFor(ModelItem => item.Noticias_Fecha.Month)/@Html.DisplayFor(ModelItem => item.Noticias_Fecha.Day)
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Noticias", new { id = item.Noticias_ID})" class="btn btn-info">Editar</a>
                                    <a onclick="return confirm('¿Desea eliminar este registro?');" href="@Url.Action("DeleteConfirmed","Noticias", new { id = item.Noticias_ID})" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>