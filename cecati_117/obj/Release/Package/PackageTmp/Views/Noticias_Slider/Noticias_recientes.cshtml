@model  IEnumerable<cecati_117.Models.Noticias>


<style>
    .slider-img-resp {
        width: 100%;
        height: auto;
        max-height: 125px;
        object-fit: cover;
    }
</style>


<div class="recentworks bottom-pad" @*style="background:white !important; box-shadow:none !important; border-bottom:none !important; border-top:none !important;"*@>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                <div class="portfolio-desc">
                    <h3 class="title">Más noticias</h3>
                    <p>
                        Mira las noticias más recientes acerca de este plantel así como los trabajos de nuestros alumnos de nuestras diferentes especialidades.
                    </p>
                    <div class="carousel-controls">
                        <a class="prev" href="#portfolio-carousel" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                        <a class="next" href="#portfolio-carousel" data-slide="next"><i class="fa fa-angle-right"></i></a>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-9 col-xs-12">
                <div class="row">
                    <div id="portfolio-carousel" class="client-carousel slide">
                        <div class="carousel-inner">
                            @{
                                int contador = 0;
                                int inicio_contador = contador;
                                int modelos = Model.Count();
                                while (contador < modelos)
                                {
                                    if (contador.Equals(0))
                                    {
                                        <div class="item active">
                                            @while (contador < 3)
                                            {
                                                if (contador >= modelos)
                                                {
                                                    break;
                                                }
                                                else
                                                {
                                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 item container">
                                                        <div class="portfolio-item column" style="background:none !important;">
                                                            <a href="@Url.Action("Noticias_Pagina","Noticias_Slider", new { id = Model.ElementAt(contador).Noticias_ID })" class="portfolio-item-link">
                                                                <span class="portfolio-item-hover"></span><span class="fullscreen"><i class="fa fa-search"></i></span>
                                                                <img src="@Model.ElementAt(contador).Noticias_ImagenURL" class="slider-img-resp" />
                                                            </a>
                                                            <div class="portfolio-item-title">
                                                                <a href="@Url.Action("Noticias_Pagina","Noticias_Slider", new { id = Model.ElementAt(contador).Noticias_ID })">@Model.ElementAt(contador).Noticias_Titulo</a>
                                                                @*<p>
                                                                        @Model.ElementAt(contador).EspecialidadDetalles_titulo
                                                                    </p>*@
                                                            </div>
                                                            <div class="clearfix"></div>
                                                        </div>
                                                    </div>
                                                    contador++;
                                                }

                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="item">
                                            @while (contador < inicio_contador + 3)
                                            {
                                                if (contador >= modelos)
                                                {
                                                    break;
                                                }
                                                else
                                                {
                                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 item container">
                                                        <div class="portfolio-item column" style="background:none !important;">
                                                            <a href="@Url.Action("Noticias_Pagina","Noticias_Slider", new { id = Model.ElementAt(contador).Noticias_ID })" class="portfolio-item-link">
                                                                <span class="portfolio-item-hover"></span><span class="fullscreen"><i class="fa fa-search"></i></span>
                                                                <img src="@Model.ElementAt(contador).Noticias_ImagenURL" class="slider-img-resp" />
                                                            </a>
                                                            <div class="portfolio-item-title">
                                                                <a href="@Url.Action("Noticias_Pagina","Noticias_Slider", new { id = Model.ElementAt(contador).Noticias_ID })">@Model.ElementAt(contador).Noticias_Titulo</a>
                                                                @*<p>
                                                                        @Model.ElementAt(contador).EspecialidadDetalles_titulo
                                                                    </p>*@
                                                            </div>
                                                            <div class="clearfix"></div>
                                                        </div>
                                                    </div>
                                                    contador++;
                                                }
                                            }
                                        </div>
                                    }
                                    inicio_contador = contador;
                                }
                            }
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>
