@model IEnumerable<cecati_117.Models.Noticias>
@{
    int count = 0;
    int count2 = 0;
    int indice = 0;
    ViewBag.Title = "Pagina de inicio";
}


<style>
    .slider-img-resp {
        width: 100%;
        height: auto;
        max-height: 125px;
        object-fit: cover;
    }
</style>
<style>
    .videoWrapper {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 */
        padding-top: 25px;
        height: 0;
    }

        .videoWrapper iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
</style>

<div id="main">
    <!-- Slider Start-->
    @{Html.RenderAction("CarruselPrincipal", "InicioCarrusel");}
    <!-- Slider End-->
    <!-- Slogan Start-->
    <div class="slogan bottom-pad-small">
        <div class="container">
            <div class="row">
                <div class="slogan-content">
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                        <h1>CECATI 117</h1>
                        <h2 class="slogan-title">¡Te aseguramos que en un año o máximo dos estarás capacitado para el mundo laboral!</h2>
                    </div>
                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                        <div>
                            <a href="@Url.Action("Index","Escoge_Especialidad")" class="btn btn-special btn-color text-center">¡Escoge tu especialidad ahora!</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="main-content">
    <div class="container">
        <!-- Recent works start-->
        <div class="bottom-pad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animate_afl d1 animate_start">
                        <h3 class="title">Noticias recientes CECATI 117</h3>
                    </div>
                </div>
                <br />
                <div class="row">
                    @while (indice < Model.Count())
                    {
                        <div class="col-lg-12 col-md-12 col-xs-12">
                            <div class="row portfolio-pad">
                                @while (count != 3 && indice < Model.Count())
                                {
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 item animate_afc d2 animate_start">
                                        <div class="portfolio-item">
                                            <a href="@Url.Action("Noticias_Pagina","Noticias_Slider", new { id = Model.ElementAt(indice).Noticias_ID })" class="portfolio-item-link">
                                                <span class="portfolio-item-hover" style="opacity: 0;"></span>
                                                <span class="fullscreen" style="top: 65%; opacity: 0;"><i class="fa fa-search"></i></span><img src="@Model.ElementAt(indice).Noticias_ImagenURL" class="slider-img-resp">
                                            </a>
                                            <div class="portfolio-item-title">
                                                <a href="@Url.Action("Noticias_Pagina","Noticias_Slider", new { id = Model.ElementAt(indice).Noticias_ID })">@Model.ElementAt(indice).Noticias_Titulo</a>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                    count++;
                                    indice++;
                                }

                            </div>
                        </div>
                        count = 0;

                    }
                    <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12 text-center">
                        <div class="get-started">
                            <a href="@Url.Action("NoticiasTodas","Noticias_Slider")" class="btn btn-special btn-color">Ver más noticias</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Recent work end-->
        </div>
    </div>
</div>

<div class="features bottom-pad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animate_afl d1 animate_start">
                <h3 class="title">¿Quieres saber más?</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <h3>Conoce más acerca de nosotros, mira nuestro video</h3>
                        <p style="text-align:justify">En el CECATI 117 nos interesa tu educación y futuro laboral, es por eso que te mostramos nuestras instalaciones y servicios, ven explora junto con <strong>Memo Pérez</strong> nuestra escuela.</p>
                    </div>

                    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 videoWrapper" style="overflow:auto">
                        <iframe src="https://www.youtube.com/embed/8VeNOxJh9os" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Features End -->
<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 animate_afl d1 animate_start">
            <h3 class="title">Sobre nuestra escuela</h3>
            <div class="clearfix"></div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div class="content-box big ch-item bottom-pad-small">
                <div class="ch-info-wrap">
                    <div class="ch-info">
                        <div class="ch-info-front ch-img-1"><i class="fa fa-map-marker" style="font-size:40px;"></i></div>
