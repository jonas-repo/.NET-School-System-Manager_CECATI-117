@model IEnumerable<cecati_117.Models.ProximosCursos>

@{
    ViewBag.Title = "Index";
}


<div class="page-title">
    <div class="title_left">
        <h3>Editar Proximos cursos</h3>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Editar Proximos cursos <small></small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <a href="@Url.Action("Create", "ProximosCursos")" class="btn btn-success">Agregar a Proximos cursos</a>
                <br />
                <table class="table table-hover table-bordered dt-responsive nowrap myTable" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProximosCursos_especialidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProximosCursos_ImagenURL)
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProximosCursos_especialidad)
                                </td>
                                <td>
                                    <div class="s_container seleccion_simple_default">
                                        <div class="ssm_opcion">
                                            <a href="@Html.DisplayFor(modelItem => item.ProximosCursos_ImagenURL)" target="_blank">
                                                <img src="@Html.DisplayFor(modelItem => item.ProximosCursos_ImagenURL)" height="150" class="img-thumbnail img-responsive" />
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","ProximosCursos", new { id = item.ProximosCursos_ID})" class="btn btn-info">Editar</a>
                                    <a onclick="return confirm('¿Desea eliminar este registro?');" href="@Url.Action("DeleteConfirmed","ProximosCursos", new { id = item.ProximosCursos_ID})" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>                
                </table>
            </div>
        </div>
    </div>
</div>
