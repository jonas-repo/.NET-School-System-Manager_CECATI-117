@model IEnumerable<cecati_117.Models.Grupo>

@{
    ViewBag.Title = "Index";
}

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Lista de tus grupos</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <a href="@Url.Action("Create", "Grupo")" class="btn btn-success">Agregar un grupo</a>
                <br />

                <table class="table table-hover table-bordered dt-responsive nowrap myTable" style="width:100%" >
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre_grupo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Turno)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ciclo_escolar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Horario)
                            </th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre_grupo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Turno)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ciclo_escolar)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Horario)
                                </td>
                                <td>
                                    <a href="@Url.Action("AddAlumns","Grupo", new { id = item.Grupo_id})" class="btn btn-default">Añadir alumnos</a>
                                    <a href="@Url.Action("Edit","Grupo", new { id = item.Grupo_id})" class="btn btn-info">Editar grupo</a>
                                    <a onclick="return confirm('¿Desea eliminar este registro?');" href="@Url.Action("DeleteConfirmed","Grupo", new { id = item.Grupo_id})" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
